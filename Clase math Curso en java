package clasemath;

/**
 *
 * @author HACKRO
 */
public class Secundaria {
    
    double num,nota,numero,potencia,min,max,raiz;
    
    public void aleatorio(){
        
        num = Math.random();
        System.out.println("El numero aleatorio es "+num);
        
    }
    
    public void redondeo(double NOTA){
        nota = Math.round(NOTA);
        System.out.println("Tu calificacion es "+nota);
        
    }
    
public void potencias(double NUMERO,double POTENCIA){
    
    numero = Math.pow(NUMERO, POTENCIA);
    System.out.println("LA POTENCIA ES DE "+numero);
    
}

public void minimo(double MIN,double MAX){
    
    min = Math.min(MIN, MAX);
    System.out.println("el minimo es "+min);
    
}

public void maximo(double MIN,double MAX){
    
    max = Math.max(MIN, MAX);
    System.out.println("el maximo es "+max);
    
}

public void raiz2(double RAIZ){
    
    raiz = Math.sqrt(RAIZ);
    System.out.println("la raiz es  "+raiz);
    
}


    
}

