package clasemath;

/**
 *
 * @author HACKRO
 */
public class ClaseMath {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
       double x =  1;
        Secundaria sec = new Secundaria();
        sec.aleatorio();
        sec.redondeo(8.5);
        sec.potencias(2, 3);
        sec.minimo(179, x);
        sec.maximo(x, 179);
        sec.raiz2(8);
        
    }
}


